// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("AUTH_DB_URL")
}

enum HibiscusRole {
  ADMIN
  SPONSOR
  HACKER
  VOLUNTEER
  JUDGE
}

model User {
  id String @id @default(uuid())
  email String @unique
  emailVerified Boolean @default(false)
  firstName String
  lastName String
  role HibiscusRole

  auth_session Session[]
  auth_key     Key[]
  email_verification_token EmailVerificationToken[]
}

model Session {
  id             String @id @unique
  user_id        String
  active_expires BigInt
  idle_expires   BigInt
  user           User   @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
}

model Key {
  id              String  @id @unique
  hashed_password String?
  user_id         String
  user            User    @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
}

model EmailVerificationToken {
  id      String @id @unique
  expires BigInt
  user_id String
  user    User    @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
}

model AuditLog {
  id        String         @id @default(uuid())
  action    String
  createdAt DateTime       @default(now())
  meta      Json?
  keyId     String?
}
